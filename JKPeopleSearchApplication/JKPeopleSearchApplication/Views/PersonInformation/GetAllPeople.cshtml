@model IEnumerable<JKPersonSearcherModels.PersonInformation>
    
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonInformationId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PersonInformationId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonInformationId })
            </td>
        </tr>
    }

</table>

